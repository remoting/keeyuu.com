#carbonads
  display: block
  overflow: hidden
  max-width: 160px
  text-align: left
  font-size: 0.90em
  font-weight: 500;
  line-height: 1.3
  border-left: 1px solid color-link;
  padding: 2px 0 2px 10px;
  a
    color: inherit
    text-decoration: none
  &:hover
    color: color-link
  span
    display: block
    overflow: hidden

.carbon-img
  display: block
  margin: 0 auto 3px
  line-height: 1

.carbon-text
  display: block
  margin-bottom: 5px

.carbon-poweredby
  display: block
  text-transform: uppercase
  letter-spacing: 1px
  font-size: 0.68em
  font-weight: 700;
  line-height: 1
  color: color-link !important
